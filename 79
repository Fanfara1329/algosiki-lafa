#include <iostream>
#include <numeric>
#include <vector>

using namespace std;

int main() {
    int n;
    cin >> n;
    vector<int> v(n);
    for (auto &i: v) cin >> i;
    int l = 0, r = n - 1;
    while (r != l) {
        int mid = (r + l) / 2;
        if (v[mid] < mid + 2) {
            l = mid + 1;
        } else {
            r = mid;
        }
        //cout << l << " " << mid << " " << r << endl;
    }
    if (!l) cout << 1;
    else cout << v[l - 1] + 1;
    return 0;
}
